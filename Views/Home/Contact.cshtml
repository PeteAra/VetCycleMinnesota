@model VCM.Models.ContactResponse

@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <title>Contact</title>
    <style>
        .panel-body {
            padding: 15px;
            margin-left: 20%;
            margin-right: 20%;
        }
        input, select, textarea {
            max-width: 650px;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <div>
        <div class="panel-heading text-center"><h1>Contact</h1></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Name *</label>
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "First and Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    @Html.TextBoxFor(x => x.Email, new { placeholder = "example@gmail.com", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(x => x.Phone, new { placeholder = "999-99-9999", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
                <div class="form-group">
                    <label>Subject *</label>
                    @Html.TextBoxFor(x => x.Subject, new { placeholder = "Subject", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
                <div class="form-group">
                    <label>Message *</label>
                    @Html.TextAreaFor(x => x.Message, new { placeholder = "Your message here...", @class = "form-control",
                   @cols = "100",
                   @rows = "6",
                   @style = "width:100%" })
                </div>
                @Html.ValidationMessageFor(m => m.Message)
                <div class="text-left">
                    <input value="Clear" type="submit" class="btn btn-warning" name="button" />
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </div>

            }
            
                @if (TempData["message"] != null)
                {
                    <script type="text/javascript">
                        alert(@Html.Raw(Json.Encode(TempData["message"])));
                    </script>
                }
        </div>

    </div>

</body>
</html>